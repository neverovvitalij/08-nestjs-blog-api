// Prisma Client generator
generator client {
  provider = "prisma-client-js"
}

// Database connection
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]
  comments  Comment[]
  
}

// Post model
model Post {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  content     String?
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  authorId    Int
  author      User     @relation(fields: [authorId], references: [id])
  comments    Comment[]
  categories  Category[]
  tags        Tag[]
  deletedAt   DateTime?

  @@unique([title, authorId])
  @@index([createdAt])
  @@index([authorId])
  @@index([published])
  @@index([deletedAt])
  @@index([slug])
}

// Comment model
model Comment {
  id        Int      @id @default(autoincrement())
  text      String
  createdAt DateTime @default(now())
  postId    Int
  post      Post @relation(fields: [postId], references: [id])
  authorId  Int
  author    User @relation(fields:[authorId], references:[id])
}

//Category model
model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  posts     Post[]
}

//Tag model
model Tag {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  posts     Post[]
}